<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white"
    tools:context=".add_cultivation_product">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Spinner
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:visibility="gone"
                android:backgroundTint="#056A4F"
                android:padding="10dp"
                android:background="@drawable/border_green"
                />
            <TextView
                android:id="@+id/txtname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cow"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/quicksandbold"
                android:textColor="#056A4F"
                android:textSize="40dp"/>

            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="#28C828" />
            <androidx.cardview.widget.CardView
                android:id="@+id/cd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="20dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgcat"
                        android:layout_width="180dp"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cow" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <FrameLayout
                android:layout_width="match_parent"
                android:background="@color/frame"
                android:layout_below="@+id/hh"
                android:layout_margin="12dp"
                android:layout_height="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksandsemibold"
                    android:text="@string/specie"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtspecie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="55dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/curvebackground"
                    android:backgroundTint="@color/commonw"
                    android:fontFamily="@font/quicksandregular"
                    android:textColor="@color/black"
                    android:hint="@string/specie"
                    android:paddingLeft="20dp"
                    app:hintTextColor="@color/black" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksandsemibold"
                        android:text="@string/year"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtyear"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:minHeight="55dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/curvebackground"
                        android:backgroundTint="@color/commonw"
                        android:fontFamily="@font/quicksandregular"
                        android:textColor="@color/black"
                        android:hint="@string/year"
                        android:maxLength="2"
                        android:inputType="numberSigned"
                        android:paddingLeft="20dp"
                        app:hintTextColor="@color/black" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksandsemibold"
                        android:text="@string/Month"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtMonth"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:minHeight="55dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/curvebackground"
                        android:backgroundTint="@color/commonw"
                        android:fontFamily="@font/quicksandregular"
                        android:textColor="@color/black"
                        android:hint="@string/month"
                        android:inputType="numberSigned"
                        android:maxLength="2"
                        android:paddingLeft="20dp"
                        app:hintTextColor="@color/black" />
                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksandsemibold"
                        android:text="@string/Milk_Production"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtMilk"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:minHeight="55dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/curvebackground"
                        android:backgroundTint="@color/commonw"
                        android:fontFamily="@font/quicksandregular"
                        android:textColor="@color/black"
                        android:hint="@string/Milk_Production"
                        android:paddingLeft="20dp"
                        android:inputType="numberDecimal"
                        app:hintTextColor="@color/black" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksandsemibold"
                        android:text="@string/Weight"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtWeight"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:minHeight="55dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/curvebackground"
                        android:backgroundTint="@color/commonw"
                        android:fontFamily="@font/quicksandregular"
                        android:textColor="@color/black"
                        android:hint="@string/Weight"
                        android:paddingLeft="20dp"
                        android:inputType="numberSigned"
                        app:hintTextColor="@color/black" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksandsemibold"
                    android:text="@string/Seller_name"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtsellername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="55dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/curvebackground"
                    android:backgroundTint="@color/commonw"
                    android:fontFamily="@font/quicksandregular"
                    android:textColor="@color/black"
                    android:hint="@string/Seller_name"
                    android:paddingLeft="20dp"
                    android:inputType="textPersonName"
                    app:hintTextColor="@color/black" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksandsemibold"
                    android:text="@string/mobile_no"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtmo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="55dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:maxLength="10"
                    android:background="@drawable/curvebackground"
                    android:backgroundTint="@color/commonw"
                    android:fontFamily="@font/quicksandregular"
                    android:textColor="@color/black"
                    android:hint="@string/mobile_number"
                    android:paddingLeft="20dp"
                    android:inputType="phone"
                    app:hintTextColor="@color/black" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksandsemibold"
                    android:text="@string/Price2"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtprc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="55dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:inputType="number"
                    android:background="@drawable/curvebackground"
                    android:backgroundTint="@color/commonw"
                    android:fontFamily="@font/quicksandregular"
                    android:textColor="@color/black"
                    android:hint="@string/Price2"
                    android:paddingLeft="20dp"
                    app:hintTextColor="@color/black" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksandsemibold"
                        android:text="@string/State"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtstate"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:minHeight="55dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/curvebackground"
                        android:backgroundTint="@color/commonw"
                        android:fontFamily="@font/quicksandregular"
                        android:textColor="@color/black"
                        android:hint="@string/State"
                        android:paddingLeft="20dp"
                        app:hintTextColor="@color/black" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksandsemibold"
                        android:text="@string/District"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtdist"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:minHeight="55dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/curvebackground"
                        android:backgroundTint="@color/commonw"
                        android:fontFamily="@font/quicksandregular"
                        android:textColor="@color/black"
                        android:hint="@string/District"
                        android:paddingLeft="20dp"
                        app:hintTextColor="@color/black" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksandsemibold"
                        android:text="@string/Tehsil"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edttehsil"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:minHeight="55dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/curvebackground"
                        android:backgroundTint="@color/commonw"
                        android:fontFamily="@font/quicksandregular"
                        android:textColor="@color/black"
                        android:hint="@string/Tehsil"
                        android:paddingLeft="20dp"
                        app:hintTextColor="@color/black" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksandsemibold"
                        android:text="@string/city_town_village"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtvlg"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:minHeight="55dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/curvebackground"
                        android:backgroundTint="@color/commonw"
                        android:fontFamily="@font/quicksandregular"
                        android:textColor="@color/black"
                        android:hint="@string/city_town_village"
                        android:paddingLeft="20dp"
                        app:hintTextColor="@color/black" />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksandsemibold"
                    android:text="@string/Description"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtdes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="55dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/curvebackground"
                    android:backgroundTint="@color/commonw"
                    android:fontFamily="@font/quicksandregular"
                    android:textColor="@color/black"
                    android:hint="@string/Description"
                    android:paddingLeft="20dp"
                    app:hintTextColor="@color/black" />
            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnchooseimage"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:fontFamily="@font/quicksandregular"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#056A4F"
                android:backgroundTint="#BAE6DA"
                android:background="@drawable/sendotp"
                android:text="@string/Choose_Image"
                />
            <ImageView
                android:id="@+id/imgprdt"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scaleType="fitCenter"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:src="@drawable/upload" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnsavedata"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:background="@drawable/sendotp"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/quicksandregular"
                android:text="@string/Save_Detail"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>