<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".add_labour">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Add_Worker"
            android:textColor="#066006"
            android:textSize="30dp"
            android:fontFamily="@font/cambay"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"

            />
            <FrameLayout
                android:layout_width="match_parent"
                android:background="@color/frame"
                android:layout_below="@+id/hh"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_height="2dp"/>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/curvebackground"
                android:hint="@string/Labour_name"
                app:counterEnabled="true"
                app:counterMaxLength="15"
                app:hintEnabled="true"
                style="@style/Add_vacancy"
                app:boxBackgroundColor="#D5D5D5"
                app:boxCornerRadiusBottomEnd="10sp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:hintTextColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:prefixText="@string/mrmrs"
                app:prefixTextColor="@color/black"
                app:startIconDrawable="@drawable/baseline_account_circle_24"
                app:startIconTint="#3E6018">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtlname"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:fontFamily="@font/allerta"
                    android:maxLength="15"
                    android:shadowColor="@color/black"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/curvebackground"
                android:hint="@string/Labour_mobile_number"
                app:counterEnabled="true"
                app:counterMaxLength="10"

                app:prefixText="+91"
                style="@style/Add_vacancy"
                app:boxBackgroundColor="#D5D5D5"
                app:boxCornerRadiusBottomEnd="10sp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:hintTextColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:prefixTextColor="@color/black"
                app:startIconDrawable="@drawable/baseline_call_24"
                app:startIconTint="#3E6018">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtlmo"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:fontFamily="@font/allerta"
                    android:inputType="number"
                    android:maxLength="10"
                    android:shadowColor="@color/black"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Add_vacancy"
                app:boxBackgroundColor="#D5D5D5"
                app:boxCornerRadiusBottomEnd="10sp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/curvebackground"
                android:hint="@string/Place_of_work"
                app:hintEnabled="true"
                app:hintTextColor="@color/black"
                app:prefixTextColor="@color/black"
                app:startIconDrawable="@drawable/baseline_location_on_24"
                app:startIconTint="#3E6018">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtlplace"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:fontFamily="@font/allerta"
                    android:maxLength="15"
                    android:shadowColor="@color/black"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <com.google.android.material.textfield.TextInputLayout
                  style="@style/Add_vacancy"
                  app:boxBackgroundColor="#D5D5D5"
                  app:boxCornerRadiusBottomEnd="10sp"
                  app:boxCornerRadiusBottomStart="10dp"
                  app:boxCornerRadiusTopEnd="10dp"
                  app:boxCornerRadiusTopStart="10dp"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:layout_marginBottom="5dp"
                  android:background="@drawable/curvebackground"
                  android:hint="@string/Experience"
                  app:hintEnabled="true"
                  app:hintTextColor="@color/black"
                  app:prefixTextColor="@color/black"
                  app:startIconDrawable="@drawable/baseline_agriculture_24"
                  app:startIconTint="#3E6018">

                  <com.google.android.material.textfield.TextInputEditText
                      android:id="@+id/expe"
                      android:layout_width="match_parent"
                      android:layout_height="60dp"
                      android:fontFamily="@font/allerta"
                      android:maxLength="15"
                      android:shadowColor="@color/black"
                      android:textColor="@color/black" />

              </com.google.android.material.textfield.TextInputLayout>

          </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Add_vacancy"
                app:boxBackgroundColor="#D5D5D5"
                app:boxCornerRadiusBottomEnd="10sp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/curvebackground"
                android:hint="@string/wages"
                app:hintEnabled="true"
                app:hintTextColor="@color/black"
                app:prefixTextColor="@color/black"
                app:startIconDrawable="@drawable/baseline_currency_rupee_24"
                app:startIconTint="#3E6018">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtlwages"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:fontFamily="@font/allerta"
                    android:maxLength="15"
                    android:inputType="numberSigned"
                    android:shadowColor="@color/black"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Add_vacancy"
                app:boxBackgroundColor="#D5D5D5"
                app:boxCornerRadiusBottomEnd="10sp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/curvebackground"
                android:hint="@string/Education"
                app:hintEnabled="true"
                app:hintTextColor="@color/black"
                app:prefixTextColor="@color/black"
                app:startIconDrawable="@drawable/baseline_currency_rupee_24"
                app:startIconTint="#3E6018">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edu"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:fontFamily="@font/allerta"
                    android:maxLength="15"
                    android:inputType="numberSigned"
                    android:shadowColor="@color/black"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Add_vacancy"
                app:boxBackgroundColor="#D5D5D5"
                app:boxCornerRadiusBottomEnd="10sp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:hintTextColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/curvebackground"
                android:hint="@string/Additional_Description"
                app:counterEnabled="true"
                app:counterMaxLength="300"
                app:hintEnabled="true"
                app:prefixTextColor="@color/black"
                app:startIconDrawable="@drawable/baseline_description_24"
                app:startIconTint="#3E6018">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtldes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/allerta"
                    android:maxLength="300"
                    android:shadowColor="@color/black"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">


                <RelativeLayout

                    android:layout_width="305dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/sendotp"
                    android:backgroundTint="#E3A18C"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/allerta"
                        android:text="@string/Select_time"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/rltime"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/clock1"
                    />
            </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:orientation="horizontal">


               <RelativeLayout

                   android:layout_width="305dp"
                   android:layout_height="60dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="5dp"
                   android:layout_marginBottom="5dp"
                   android:backgroundTint="#9BD8DF"
                   android:background="@drawable/sendotp"
                   android:gravity="center">


                   <TextView
                       android:id="@+id/txtdate"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/Select_date"
                       android:fontFamily="@font/allerta"
                       android:textColor="#FFFFFF"
                       android:textSize="20dp" />
               </RelativeLayout>
               <ImageView
                   android:id="@+id/rldate"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:layout_marginLeft="5dp"
                   android:layout_gravity="center_vertical"
                   android:src="@drawable/calendar"
                   />
           </LinearLayout>
            <RelativeLayout
                android:id="@+id/btnsavedetail"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/sendotp"
                android:gravity="center">

                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#8BC34A"
                    android:foregroundTint="#8BC34A"
                    android:progressTint="#8BC34A"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/allerta"
                    android:text="@string/Save_Detail"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>








</LinearLayout>