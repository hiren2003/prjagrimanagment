<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#FFFFFF"
    tools:context=".add_labour_vacancy">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/quicksandbold"
                android:text="@string/Add_Vacancy"
                android:textColor="@color/ct"
                android:textSize="30dp"
                android:textStyle="bold"

                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/hh"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/frame" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/quicksandsemibold"
                android:text="Name "
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtoname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/curvebackground"
                android:backgroundTint="@color/commonw"
                android:fontFamily="@font/quicksandregular"
                android:textColor="@color/black"
                android:hint="@string/Owner_name"
                android:paddingLeft="20dp"
                app:hintTextColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/quicksandsemibold"
                android:text="@string/mobile_no"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtmo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="55dp"
                android:layout_marginLeft="10dp"
                android:maxLength="10"
                android:layout_marginRight="10dp"
                android:background="@drawable/curvebackground"
                android:backgroundTint="@color/commonw"
                android:fontFamily="@font/quicksandregular"
                android:textColor="@color/black"
                android:hint="@string/mobile_number"
                android:paddingLeft="20dp"
                android:inputType="number"
                app:hintTextColor="@color/black" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/quicksandsemibold"
                android:text="@string/Work_type"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtwtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/curvebackground"
                android:backgroundTint="@color/commonw"
                android:fontFamily="@font/quicksandregular"
                android:textColor="@color/black"
                android:hint="@string/Work_type"
                android:paddingLeft="20dp"
                app:hintTextColor="@color/black" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdbfixwages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/quicksandregular"
                    android:text="@string/Fix_Wages"
                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/rdbprtsp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/quicksandregular"
                    android:text="@string/On_Partenership"
                    android:textSize="18dp" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/quicksandsemibold"
                android:text="@string/Extected_Income"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtincome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="number"
                android:background="@drawable/curvebackground"
                android:backgroundTint="@color/commonw"
                android:fontFamily="@font/quicksandregular"
                android:textColor="@color/black"
                android:hint="@string/Extected_Income"
                android:paddingLeft="20dp"
                app:hintTextColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/quicksandsemibold"
                android:text="@string/Work_Duration"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtduration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/curvebackground"
                android:backgroundTint="@color/commonw"
                android:fontFamily="@font/quicksandregular"
                android:textColor="@color/black"
                android:hint="@string/Work_Duration"
                android:paddingLeft="20dp"
                android:inputType="number"
                app:hintTextColor="@color/black" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksandsemibold"
                        android:text="@string/State"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtstate"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:minHeight="55dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/curvebackground"
                        android:backgroundTint="@color/commonw"
                        android:fontFamily="@font/quicksandregular"
                        android:textColor="@color/black"
                        android:hint="@string/State"
                        android:paddingLeft="20dp"
                        app:hintTextColor="@color/black" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksandsemibold"
                        android:text="@string/District"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtdist"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:minHeight="55dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/curvebackground"
                        android:backgroundTint="@color/commonw"
                        android:fontFamily="@font/quicksandregular"
                        android:textColor="@color/black"
                        android:hint="@string/District"
                        android:paddingLeft="20dp"
                        app:hintTextColor="@color/black" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksandsemibold"
                        android:text="@string/Tehsil"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edttehsil"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:minHeight="55dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/curvebackground"
                        android:backgroundTint="@color/commonw"
                        android:fontFamily="@font/quicksandregular"
                        android:textColor="@color/black"
                        android:hint="@string/Tehsil"
                        android:paddingLeft="20dp"
                        app:hintTextColor="@color/black" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksandsemibold"
                        android:text="@string/city_town_village"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtvlg"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:minHeight="55dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/curvebackground"
                        android:backgroundTint="@color/commonw"
                        android:fontFamily="@font/quicksandregular"
                        android:textColor="@color/black"
                        android:hint="@string/city_town_village"
                        android:paddingLeft="20dp"
                        app:hintTextColor="@color/black" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksandsemibold"
                    android:text="@string/Description"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtdes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="55dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/curvebackground"
                    android:backgroundTint="@color/commonw"
                    android:fontFamily="@font/quicksandregular"
                    android:textColor="@color/black"
                    android:hint="@string/Description"
                    android:paddingLeft="20dp"
                    app:hintTextColor="@color/black" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/btnsavevdetail"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="10dp"
                android:background="@drawable/sendotp"
                android:gravity="center">

                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#8BC34A"
                    android:foregroundTint="#8BC34A"
                    android:progressTint="#8BC34A"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandsemibold"
                    android:text="@string/Save_Detail"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>