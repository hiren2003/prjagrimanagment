<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".category_cultivation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/choose_cat"
                android:textColor="#066006"
                android:textSize="50dp" />
            <FrameLayout
                android:layout_width="match_parent"
                android:background="@color/frame"
                android:layout_below="@+id/hh"
                android:layout_margin="12dp"
                android:layout_height="2dp"/>
<!--            GRAINS-->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/rdbgrains"
                android:layout_height="140dp"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal"
                android:checkable="true"
                app:cardBackgroundColor="@android:color/white"
                app:cardForegroundColor="@android:color/transparent"
                app:checkedIconSize="0dp"
                app:cardElevation="2dp"
                app:strokeWidth="4dp"
                app:strokeColor="@color/effect"
                app:cardCornerRadius="20dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:layout_marginRight="5dp"
                   android:layout_marginBottom="5dp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Grains"
                       android:layout_marginLeft="20dp"
                       android:layout_gravity="center_vertical"
                       android:fontFamily="@font/montserrat_medium"
                       android:textColor="@color/black"
                       android:textSize="30dp"/>
                   <com.google.android.material.card.MaterialCardView
                       android:layout_width="200dp"
                       android:layout_height="120dp"
                       android:layout_gravity="center_vertical"
                       android:checkable="true"
                       android:layout_marginTop="5dp"
                       android:layout_marginBottom="5dp"
                       android:layout_marginLeft="45dp"
                       android:layout_marginRight="5dp"
                       app:cardBackgroundColor="@android:color/white"
                       app:cardForegroundColor="@android:color/transparent"
                       app:strokeColor="@color/newww"
                       app:cardCornerRadius="20dp">
                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="120dp"

                           >

                           <ImageView
                               android:layout_width="match_parent"
                               android:layout_height="120dp"
                               android:background="@drawable/curvebackground"
                               android:scaleType="centerCrop"
                               android:src="@drawable/garins" />


                       </RelativeLayout>

                   </com.google.android.material.card.MaterialCardView>

               </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

<!--            FRUITS-->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/rdbfruits"
                android:layout_height="140dp"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal"
                android:checkable="true"
                app:cardBackgroundColor="@android:color/white"
                app:cardForegroundColor="@android:color/transparent"
                app:checkedIconSize="0dp"
                app:cardElevation="2dp"
                app:strokeWidth="4dp"
                app:strokeColor="@color/effect"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="180dp"
                        android:layout_height="120dp"
                        android:checkable="true"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        app:cardBackgroundColor="@android:color/holo_green_light"
                        app:cardForegroundColor="@android:color/transparent"
                        app:strokeColor="@color/newww"
                        app:cardCornerRadius="20dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/fruits2"/>

                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Fruits"
                        android:textColor="@color/black"
                        android:textSize="30dp"
                        />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
<!--            PULSES-->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/rdbpulses"
                android:layout_height="140dp"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal"
                android:checkable="true"
                app:cardBackgroundColor="@android:color/white"
                app:cardForegroundColor="@android:color/transparent"
                app:checkedIconSize="0dp"
                app:cardElevation="2dp"
                app:strokeWidth="4dp"
                app:strokeColor="@color/effect"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pulses"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/black"
                        android:textSize="30dp"/>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_vertical"
                        android:checkable="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="45dp"
                        android:layout_marginRight="5dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardForegroundColor="@android:color/transparent"
                        app:strokeColor="@color/newww"
                        app:cardCornerRadius="20dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"

                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:background="@drawable/curvebackground"
                                android:scaleType="centerCrop"
                                android:src="@drawable/pulses" />


                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
<!--                VEGETABLES-->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/rdbvegatable"
                android:layout_height="140dp"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal"
                android:checkable="true"
                app:cardBackgroundColor="@android:color/white"
                app:cardForegroundColor="@android:color/transparent"
                app:checkedIconSize="0dp"
                app:cardElevation="2dp"
                app:strokeWidth="4dp"
                app:strokeColor="@color/effect"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="180dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="5dp"
                        android:checkable="true"
                        android:layout_gravity="center_vertical"
                        app:cardBackgroundColor="@android:color/holo_green_light"
                        app:cardForegroundColor="@android:color/transparent"
                        app:strokeColor="@color/newww"
                        app:cardCornerRadius="20dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/vegatable"/>

                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vegetables"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/black"
                        android:textSize="30dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
<!--                OTHERS-->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/rdbothers"
                android:layout_height="140dp"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal"
                android:checkable="true"
                app:cardBackgroundColor="@android:color/white"
                app:cardForegroundColor="@android:color/transparent"
                app:checkedIconSize="0dp"
                app:cardElevation="2dp"
                app:strokeWidth="4dp"
                app:strokeColor="@color/effect"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Others"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/black"
                        android:textSize="30dp"/>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_vertical"
                        android:checkable="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="5dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardForegroundColor="@android:color/transparent"
                        app:strokeColor="@color/newww"
                        app:cardCornerRadius="20dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"

                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:background="@drawable/curvebackground"
                                android:scaleType="centerCrop"
                                android:src="@drawable/otherprdt" />


                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>






            <ImageButton

                android:text="Next"
                android:layout_marginTop="20dp"
                android:id="@+id/btn"
                android:textSize="30dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_gravity="end"
                android:background="@drawable/sendotp"
                app:srcCompat="@drawable/baseline_arrow_forward_24"
                app:tint="#FFFFFF"/>
        </LinearLayout>
</androidx.core.widget.NestedScrollView>