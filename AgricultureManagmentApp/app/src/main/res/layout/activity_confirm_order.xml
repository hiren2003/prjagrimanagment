<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConfirmOrder">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <androidx.cardview.widget.CardView
          android:id="@+id/cdprdt"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          app:cardCornerRadius="20dp"
          android:minHeight="100dp">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:orientation="horizontal">
              <androidx.cardview.widget.CardView
                  android:layout_width="150dp"
                  android:layout_margin="5dp"
                  android:layout_height="150dp"
                  app:cardCornerRadius="20dp">
                  <ImageView
                      android:id="@+id/imgprdt"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"/>
              </androidx.cardview.widget.CardView>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
                  <TextView
                      android:id="@+id/txtpname"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="#000"
                      android:textSize="25dp"
                      android:fontFamily="@font/quicksandregular"
                      android:textStyle="bold"
                      android:text="Product Name"/>
                  <TextView
                      android:id="@+id/txtprc"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="#000"
                      android:fontFamily="@font/quicksandregular"
                      android:textSize="20dp"
                      android:text="$900"/>
                  <TextView
                      android:id="@+id/txtqty"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="#000"
                      android:fontFamily="@font/quicksandregular"
                      android:textSize="20dp"
                      android:text="Quantity : 2"/>
                  <TextView
                      android:id="@+id/txtdes"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="#000"
                      android:fontFamily="@font/quicksandregular"
                      android:textSize="15dp"
                      android:text="hello this is a description and hello ok i am hiren and my name is "/>
              </LinearLayout>
          </LinearLayout>
      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          app:cardCornerRadius="15dp">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="10dp"
              android:orientation="vertical">
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="25dp"
                      android:textStyle="bold"
                      android:fontFamily="@font/quicksandsemibold"
                      android:textColor="#000"
                      android:text="@string/Customer_Information"/>
                  <ImageView
                      android:id="@+id/imgedit"
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:src="@drawable/editicon"
                      android:layout_alignParentEnd="true"
                      />

              </RelativeLayout>
              <TextView
                  android:id="@+id/txtcname"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/quicksandregular"
                  android:textSize="20dp"
                  android:text="Hiren Bhalani"/>
              <TextView
                  android:id="@+id/txtcmo"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="15dp"
                  android:fontFamily="@font/quicksandregular"
                  android:text="+91 7229005896"/>
              <TextView
                  android:id="@+id/txtcadd"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="15dp"
                  android:fontFamily="@font/quicksandregular"
                  android:text="B 28 Swaminarayan Part 2 Simada Gam Surat."/>
          </LinearLayout>
      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          app:cardCornerRadius="15dp">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:orientation="vertical">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="25dp"
                  android:textStyle="bold"
                  android:textColor="#000"
                  android:fontFamily="@font/quicksandsemibold"
                  android:text="Billing"/>
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="20dp"
                      android:fontFamily="@font/quicksandregular"
                      android:text="Order Amount"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:text=":"
                      android:textStyle="bold"
                      android:textSize="20dp" />

                  <TextView
                      android:id="@+id/txtamount"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentEnd="true"
                      android:text="$900"
                      android:fontFamily="@font/quicksandregular"
                      android:textSize="20dp" />
              </RelativeLayout>
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="20dp"
                      android:fontFamily="@font/quicksandregular"
                      android:text="CGST"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:text=":"
                      android:textStyle="bold"
                      android:textSize="20dp" />

                  <TextView
                      android:id="@+id/txtcgst"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentEnd="true"
                      android:text="$900"
                      android:fontFamily="@font/quicksandregular"
                      android:textSize="20dp" />
              </RelativeLayout>
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="20dp"
                      android:fontFamily="@font/quicksandregular"
                      android:text="SGST"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:text=":"
                      android:textStyle="bold"
                      android:textSize="20dp" />
                  <TextView
                      android:id="@+id/txtsgst"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="20dp"
                      android:layout_alignParentEnd="true"
                      android:fontFamily="@font/quicksandregular"
                      android:text="$900"/>
              </RelativeLayout>
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="20dp"
                      android:fontFamily="@font/quicksandregular"
                      android:text="Shipping Charges"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:text=":"
                      android:textStyle="bold"
                      android:textSize="20dp" />

                  <TextView
                      android:id="@+id/txtshpgcharges"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentEnd="true"
                      android:text="$900"
                      android:fontFamily="@font/quicksandregular"
                      android:textSize="20dp" />
              </RelativeLayout>
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/Discount"
                      android:fontFamily="@font/quicksandregular"
                      android:textSize="20dp" />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:text=":"
                      android:textStyle="bold"
                      android:textSize="20dp" />

                  <TextView
                      android:id="@+id/txtdis"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentEnd="true"
                      android:text="$900"
                      android:fontFamily="@font/quicksandregular"
                      android:textSize="20dp" />
              </RelativeLayout>
              <FrameLayout
                  android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:background="#000"/>
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_gravity="end"
                  >

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/Payable_Amount"
                      android:fontFamily="@font/quicksandregular"
                      android:textSize="20dp" />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:text=":"
                      android:layout_marginStart="5dp"
                      android:layout_marginEnd="5dp"
                      android:textStyle="bold"
                      android:textSize="15dp" />
                  <TextView
                      android:id="@+id/txtpayableamt"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="20dp"
                      android:fontFamily="@font/quicksandregular"
                      android:layout_alignParentEnd="true"
                      android:text="$900"/>
              </LinearLayout>
          </LinearLayout>
      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:id="@+id/cdpmod"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          app:cardCornerRadius="15dp">
          <RadioGroup
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:orientation="vertical">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="25dp"
                  android:textStyle="bold"
                  android:fontFamily="@font/quicksandsemibold"
                  android:textColor="#000"
                  android:text="@string/Payment_Mode"/>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:layout_margin="5dp"
                  android:padding="5dp"
                  android:orientation="horizontal">
                  <RadioButton
                      android:id="@+id/rbcod"
                      android:layout_width="30dp"
                      android:layout_height="30dp"/>
                  <ImageView
                      android:layout_width="40dp"
                      android:layout_height="40dp"
                      android:layout_marginStart="10dp"
                      android:src="@drawable/cod"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/Cash_On_Delivery"
                      android:layout_marginStart="10dp"
                      android:textColor="#000"
                      android:fontFamily="@font/quicksandregular"
                      android:textStyle="bold"
                      android:textSize="20dp"
                      />
              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:layout_margin="5dp"
                  android:padding="5dp"
                  android:orientation="horizontal">
                  <RadioButton
                      android:id="@+id/rbonline"
                      android:layout_width="30dp"
                      android:layout_height="30dp"/>
                  <ImageView
                      android:layout_width="40dp"
                      android:layout_height="40dp"
                      android:layout_marginStart="10dp"
                      android:src="@drawable/onlinepayment"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/digital_payment"
                      android:layout_marginStart="10dp"
                      android:textColor="#000"
                      android:textStyle="bold"
                      android:fontFamily="@font/quicksandregular"
                      android:textSize="20dp"
                      />
              </LinearLayout>
          </RadioGroup>
      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:id="@+id/cdpdetail"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          app:cardCornerRadius="15dp">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:orientation="vertical">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/Order_Id"
                  android:textStyle="bold"
                  android:fontFamily="@font/quicksandsemibold"
                  android:textSize="20dp"/>
              <TextView
                  android:id="@+id/txtoid"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="15dp"
                  android:fontFamily="@font/quicksandregular"
                  android:text="-NmRkGVpP7afIlnODjGf"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/Payment_Mode"
                  android:textStyle="bold"
                  android:fontFamily="@font/quicksandsemibold"
                  android:textSize="20dp"/>
              <TextView
                  android:id="@+id/txtpmod"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="15dp"
                  android:fontFamily="@font/quicksandregular"
                  android:text="Online"/>
             <LinearLayout
                 android:id="@+id/lnpoption"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/Payment_Status"
                     android:textStyle="bold"
                     android:fontFamily="@font/quicksandsemibold"
                     android:textSize="20dp"/>
                 <TextView
                     android:id="@+id/txtpstatus"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="15dp"
                     android:fontFamily="@font/quicksandregular"
                     android:text="Sucess"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/Payment_Id"
                     android:fontFamily="@font/quicksandsemibold"
                     android:textStyle="bold"

                     android:textSize="20dp"/>
                 <TextView
                     android:id="@+id/txtpid"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="15dp"
                     android:fontFamily="@font/quicksandregular"
                     android:text="pay_NGWvrWHPVW1uX5"/>
             </LinearLayout>
          </LinearLayout>
      </androidx.cardview.widget.CardView>

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/btnconfirm"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_margin="10dp"
          android:text="@string/Order_Confirm2"
          android:textStyle="bold"
          android:textSize="20dp"
          android:fontFamily="@font/quicksandsemibold"
          android:background="@drawable/curvebackground"
          android:textColor="#ffffff"
          android:backgroundTint="#FFB302"
          />
  </LinearLayout>
</androidx.core.widget.NestedScrollView>