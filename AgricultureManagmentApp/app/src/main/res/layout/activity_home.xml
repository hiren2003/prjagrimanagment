<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:gravity="center_vertical"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/prfpc"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/labour"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Hello"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:fontFamily="@font/montserrat_medium"/>
                        <TextView
                            android:id="@+id/txtname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Thomsan"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:maxWidth="300dp"
                            android:fontFamily="@font/montserrat_medium"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="5dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/imgcart"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/cart"/>

                    <ImageView
                        android:id="@+id/imgorder"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/tracking"/>

                    <ImageView
                        android:id="@+id/imgmessage"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/messenger"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:id="@+id/fmlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                />

                <com.gauravk.bubblenavigation.BubbleNavigationLinearView
                    android:id="@+id/bottom_navigation_view_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="20dp"
                    android:background="@drawable/full_curve"
                    android:backgroundTint="#073B3A"
                    android:layout_centerHorizontal="true"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <com.gauravk.bubblenavigation.BubbleToggleView
                        android:id="@+id/itemfeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:bt_active="true"
                        app:bt_colorActive="@color/Dark_green"
                        app:bt_colorInactive="@color/Light_green"
                        app:bt_icon="@drawable/instagram"
                        app:bt_shape="@drawable/person_background_oval"
                        app:bt_title="Feed" />

                    <com.gauravk.bubblenavigation.BubbleToggleView
                        android:id="@+id/itemlabour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:bt_badgeBackgroundColor="@color/green_active"
                        app:bt_colorActive="@color/Dark_green"
                        app:bt_colorInactive="@color/Light_green"
                        app:bt_icon="@drawable/worker"
                        app:bt_shape="@drawable/person_background_oval"
                        app:bt_title="Vacancy" />

                    <com.gauravk.bubblenavigation.BubbleToggleView
                        android:id="@+id/itemhome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:bt_colorActive="@color/Dark_green"
                        app:bt_colorInactive="@color/Light_green"
                        app:bt_icon="@drawable/home"
                        app:bt_shape="@drawable/person_background_oval"
                        app:bt_title="Home" />

                    <com.gauravk.bubblenavigation.BubbleToggleView
                        android:id="@+id/itemresell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:bt_colorActive="@color/Dark_green"
                        app:bt_colorInactive="@color/Light_green"
                        app:bt_icon="@drawable/resell"
                        app:bt_shape="@drawable/person_background_oval"
                        app:bt_title="Resell" />

                    <com.gauravk.bubblenavigation.BubbleToggleView
                        android:id="@+id/itemecom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:bt_colorActive="@color/Dark_green"
                        app:bt_colorInactive="@color/Light_green"
                        app:bt_icon="@drawable/store"
                        app:bt_shape="@drawable/person_background_oval"
                        app:bt_title="Store"
                        />
                    <com.gauravk.bubblenavigation.BubbleToggleView
                        android:id="@+id/itemmore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:bt_colorActive="@color/Dark_green"
                        app:bt_colorInactive="@color/Light_green"
                        app:bt_icon="@drawable/add"
                        app:bt_shape="@drawable/person_background_oval"
                         />
                </com.gauravk.bubblenavigation.BubbleNavigationLinearView>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#66000000"/>
    <LinearLayout
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="95dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/txtback"
                android:textColor="@color/Dark_green"
                android:padding="8dp"
                android:visibility="gone"
                android:text="@string/Explore_User"/>
            <ImageView
                android:id="@+id/floatingActionButton6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:visibility="invisible"
                android:focusable="true"
                android:layout_margin="10dp"
                android:src="@drawable/search"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="8dp"
                android:background="@drawable/txtback"
                android:textColor="@color/Dark_green"
                android:text="@string/FarmerFriend"/>
            <ImageView
                android:id="@+id/floatingActionButton5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:visibility="invisible"
                android:focusable="true"
                android:layout_margin="10dp"
                android:src="@drawable/kissanfriends"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="8dp"
                android:background="@drawable/txtback"
                android:textColor="@color/Dark_green"
                android:text="@string/Resell"/>
            <ImageView
                android:id="@+id/floatingActionButton4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:visibility="invisible"
                android:focusable="true"
                android:layout_margin="10dp"
                android:src="@drawable/resell"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="8dp"
                android:background="@drawable/txtback"
                android:textColor="@color/Dark_green"
                android:text="@string/Add_Worker"/>
            <ImageView
                android:id="@+id/floatingActionButton3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:visibility="invisible"
                android:focusable="true"
                android:layout_margin="10dp"
                android:src="@drawable/labour" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="8dp"
                android:background="@drawable/txtback"
                android:textColor="@color/Dark_green"
                android:text="@string/Add_Vacancy"/>
            <ImageView
                android:id="@+id/floatingActionButton2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:visibility="invisible"
                android:focusable="true"
                android:layout_margin="10dp"
                android:src="@drawable/administrator"
                />
        </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="8dp"
        android:background="@drawable/txtback"
        android:textColor="@color/Dark_green"
        android:text="@string/Add_Post"/>
    <ImageView
        android:id="@+id/floatingActionButton1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/feed2" />
</LinearLayout>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/floatingActionButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:clickable="true"
            android:layout_margin="10dp"
            app:lottie_autoPlay="true"
            android:visibility="gone"
            app:lottie_loop="true"
            android:focusable="true"
            app:lottie_rawRes="@raw/add" />

    </LinearLayout>

</RelativeLayout>