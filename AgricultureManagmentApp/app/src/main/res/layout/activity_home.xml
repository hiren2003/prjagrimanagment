<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">
<RelativeLayout
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:gravity="center_vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/prfpc"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/labour"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Hello"
                android:textStyle="bold"
                android:textSize="15dp"
                android:fontFamily="@font/montserrat_medium"/>
            <TextView
                android:id="@+id/txtname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Thomsan"
                android:textStyle="bold"
                android:textSize="20dp"
                android:maxWidth="300dp"
                android:fontFamily="@font/montserrat_medium"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/imgcart"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/cart"/>

    <ImageView
        android:id="@+id/imgorder"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/tracking"/>
</RelativeLayout>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <FrameLayout
           android:id="@+id/fmlayout"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@color/white"
           android:layout_marginBottom="75dp" />
       <com.gauravk.bubblenavigation.BubbleNavigationLinearView
           android:id="@+id/bottom_navigation_view_linear"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/white"
           android:elevation="8dp"
           android:orientation="horizontal"
           android:padding="12dp"
         android:layout_alignParentBottom="true"
           >

           <com.gauravk.bubblenavigation.BubbleToggleView
               android:id="@+id/itemfeed"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:bt_active="true"
               app:bt_colorActive="@color/red_active"
               app:bt_colorInactive="@color/red_inactive"
               app:bt_icon="@drawable/feed2"
               bt_iconWidth="50dp"
               android:layout_marginEnd="10dp"
               app:bt_shape="@drawable/transition_background_drawable_home"
               app:bt_title="Feed" />

           <com.gauravk.bubblenavigation.BubbleToggleView
               android:id="@+id/itemlabour"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:bt_badgeBackgroundColor="@color/green_active"
               app:bt_colorActive="@color/blue_active"
               app:bt_colorInactive="@color/blue_inactive"
               app:bt_icon="@drawable/labour"
               android:layout_marginEnd="10dp"
               app:bt_shape="@drawable/transition_background_drawable_search"
               app:bt_title="Labour" />

           <com.gauravk.bubblenavigation.BubbleToggleView
               android:id="@+id/itemhome"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:bt_colorActive="@color/blue_grey_active"
               app:bt_colorInactive="@color/blue_grey_inactive"
               app:bt_icon="@drawable/house"
               android:layout_marginEnd="10dp"
               app:bt_shape="@drawable/transition_background_drawable_like"
               app:bt_title="Home" />

           <com.gauravk.bubblenavigation.BubbleToggleView
               android:id="@+id/itemresell"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:bt_colorActive="@color/green_active"
               app:bt_colorInactive="@color/green_inactive"
               app:bt_icon="@drawable/resell"
               android:layout_marginEnd="10dp"
               app:bt_shape="@drawable/transition_background_drawable_list"
               app:bt_title="Resell" />

           <com.gauravk.bubblenavigation.BubbleToggleView
               android:id="@+id/itemecom"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:bt_colorActive="@color/purple_active"
               app:bt_colorInactive="@color/purple_inactive"
               app:bt_icon="@drawable/online_store"
               app:bt_shape="@drawable/transition_background_drawable_person"
               app:bt_title="Ecommerce "/>
       </com.gauravk.bubblenavigation.BubbleNavigationLinearView>
       <com.etebarian.meowbottomnavigation.MeowBottomNavigation
           android:id="@+id/btmnv"
           android:visibility="gone"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           app:mbn_backgroundBottomColor="#FFFFFF"
           app:mbn_circleColor="#038808"
           app:mbn_countBackgroundColor="#ff6f00"
           app:mbn_countTextColor="#ffffff"
           app:mbn_defaultIconColor="#A8C7D6"
           app:mbn_rippleColor="#2f424242"
           app:mbn_selectedIconColor="#EFF3EF"
           app:mbn_shadowColor="#1f212121" />
   </RelativeLayout>
</LinearLayout>