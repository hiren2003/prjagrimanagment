<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="10dp"
    tools:context=".OTP">

 <androidx.core.widget.NestedScrollView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:fillViewport="true"
     android:scrollbars="vertical">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="center_horizontal"
         android:orientation="vertical">

         <com.airbnb.lottie.LottieAnimationView
             android:layout_width="250dp"
             android:layout_height="250dp"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="50dp"
             android:layout_marginBottom="10dp"
             app:lottie_autoPlay="true"
             app:lottie_loop="true"
             app:lottie_rawRes="@raw/otp" />

         <TextView
             android:id="@+id/txtmo"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="start"
             android:layout_marginTop="160dp"
             android:layout_marginLeft="30dp"
             android:fontFamily="@font/montserrat"
             android:text="@string/Otp_Sent_to"
             android:textColor="#000000"
             android:textSize="25dp" />

         <LinearLayout
             android:layout_width="326dp"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:layout_margin="20dp"
             android:orientation="horizontal">

             <EditText
                 android:id="@+id/sms1"
                 style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:layout_margin="2dp"
                 android:background="@drawable/border_green"
                 android:contentDescription="@string/Code_sent"
                 android:fontFamily="@font/quicksandmedium"
                 android:gravity="center"
                 android:imeOptions="actionNext"
                 android:importantForAutofill="no"
                 android:inputType="numberSigned"
                 android:maxLength="1"
                 tools:ignore="Labelfor" />

             <EditText
                 android:id="@+id/sms2"
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:layout_margin="2dp"
                 android:background="@drawable/border_green"
                 android:fontFamily="@font/quicksandmedium"
                 android:gravity="center"
                 android:imeOptions="actionNext"
                 android:importantForAutofill="no"
                 android:inputType="numberSigned"
                 android:maxLength="1"
                 tools:ignore="Labelfor" />

             <EditText
                 android:id="@+id/sms3"
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:layout_margin="2dp"
                 android:background="@drawable/border_green"
                 android:fontFamily="@font/quicksandmedium"
                 android:gravity="center"
                 android:imeOptions="actionNext"
                 android:importantForAutofill="no"
                 android:inputType="numberSigned"
                 android:maxLength="1"
                 tools:ignore="Labelfor" />

             <EditText
                 android:id="@+id/sms4"
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:layout_margin="2dp"
                 android:background="@drawable/border_green"
                 android:fontFamily="@font/quicksandmedium"
                 android:gravity="center"
                 android:imeOptions="actionNext"
                 android:importantForAutofill="no"
                 android:inputType="numberSigned"
                 android:maxLength="1"
                 tools:ignore="Labelfor" />

             <EditText
                 android:id="@+id/sms5"
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:layout_margin="2dp"
                 android:background="@drawable/border_green"
                 android:fontFamily="@font/quicksandmedium"
                 android:gravity="center"
                 android:imeOptions="actionNext"
                 android:importantForAutofill="no"
                 android:inputType="numberSigned"
                 android:maxLength="1"
                 tools:ignore="Labelfor" />

             <EditText
                 android:id="@+id/sms6"
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:layout_margin="2dp"
                 android:background="@drawable/border_green"
                 android:fontFamily="@font/quicksandmedium"
                 android:gravity="center"
                 android:imeOptions="actionNext"
                 android:importantForAutofill="no"
                 android:inputType="numberSigned"
                 android:maxLength="1"
                 tools:ignore="Labelfor" />
         </LinearLayout>

         <RelativeLayout
             android:id="@+id/btnverify"
             android:layout_width="match_parent"
             android:layout_height="60dp"
             android:layout_marginLeft="15dp"
             android:layout_marginTop="90dp"
             android:layout_marginRight="15dp"
             android:background="@drawable/sendotp"
             android:gravity="center">

             <TextView
                 android:id="@+id/txt"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:fontFamily="@font/montserrat"
                 android:text="@string/Verify_Otp"
                 android:textColor="#FFFFFF"
                 android:textSize="20dp" />

             <ProgressBar
                 android:id="@+id/progressBar2"
                 style="?android:attr/progressBarStyle"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:backgroundTint="#8BC34A"
                 android:foregroundTint="#8BC34A"
                 android:progressTint="#8BC34A"
                 android:visibility="gone" />

         </RelativeLayout>

         <TextView
             android:id="@+id/txtretry"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:layout_margin="30dp"
             android:text="@string/Change_Detail"
             android:textColor="#0520B9"
             android:textSize="20dp"
             android:visibility="gone" />
     </LinearLayout>
 </androidx.core.widget.NestedScrollView>
</RelativeLayout>