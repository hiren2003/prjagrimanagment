<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".show_ecom_prdt">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ProductDetail"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/mavenpro"
        android:textColor="@color/black"
        android:textSize="40dp"/>
    <FrameLayout
        android:layout_width="120dp"
        android:background="#28C828"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_height="2dp"/>
     <androidx.cardview.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:cardCornerRadius="10dp"
         app:cardElevation="10dp"
         android:layout_margin="10dp">
         <ScrollView
             android:layout_width="match_parent"
             android:layout_height="match_parent">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="vertical"
                 android:padding="5dp">

                 <ImageView
                     android:id="@+id/imgprdt"
                     android:layout_width="match_parent"
                     android:layout_height="300dp"
                     android:layout_margin="5dp"
                     android:scaleType="fitCenter" />
                 <FrameLayout
                     android:layout_width="match_parent"
                     android:background="@color/frame"
                     android:layout_below="@+id/hh"
                     android:layout_margin="12dp"
                     android:layout_height="2dp"/>
                 <TextView
                     android:id="@+id/txtpname"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Product Name"
                     android:textColor="#000000"
                     android:layout_gravity="center_horizontal"
                     android:textSize="15dp"
                     android:textStyle="bold" />

                 <TextView
                     android:id="@+id/txtprice"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="$2000"
                     android:layout_gravity="center_horizontal"
                     android:textColor="#000000"
                     android:textSize="15dp"
                     />
                 <TextView
                     android:id="@+id/txtkey"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="$2000"
                     android:layout_gravity="center_horizontal"
                     android:textColor="#000000"
                     android:textSize="10dp"
                     />

                 <com.google.android.material.textfield.TextInputLayout
                     style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:background="@drawable/curvebackground"
                     android:hint="@string/qty2"
                     android:visibility="gone"
                     android:id="@+id/txtqty2"
                     app:hintEnabled="true"
                     app:hintTextColor="@color/black">

                     <com.google.android.material.textfield.TextInputEditText
                         android:id="@+id/edtqty2"
                         android:layout_width="match_parent"
                         android:layout_height="60dp"
                         android:fontFamily="@font/allerta"
                         android:inputType="numberDecimal"
                         android:shadowColor="@color/black"
                         android:visibility="gone"
                         android:text="1"
                         android:textColor="@color/black" />

                 </com.google.android.material.textfield.TextInputLayout>
                 <FrameLayout
                     android:layout_width="match_parent"
                     android:background="@color/frame"
                     android:layout_below="@+id/hh"
                     android:layout_margin="12dp"
                     android:layout_height="2dp"/>
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="@string/Specification"
                     android:textColor="#000000"
                     android:textSize="15dp"
                     android:textStyle="bold" />

                 <TextView
                     android:id="@+id/txtspec"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Fruits"
                     android:textColor="#000000"
                     android:textSize="15dp" />
                 <FrameLayout
                     android:layout_width="match_parent"
                     android:background="@color/frame"
                     android:layout_below="@+id/hh"
                     android:layout_margin="12dp"
                     android:layout_height="2dp"/>
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="@string/Product_Description"
                     android:textColor="#000000"
                     android:textSize="15dp"
                     android:textStyle="bold" />

                 <TextView
                     android:id="@+id/txtdec"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Fruits"
                     android:textColor="#000000"
                     android:textSize="15dp" />
                 <FrameLayout
                     android:layout_width="match_parent"
                     android:background="@color/frame"
                     android:layout_below="@+id/hh"
                     android:layout_margin="12dp"
                     android:layout_height="2dp"/>
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="@string/Recommandation"
                     android:textColor="#000000"
                     android:textSize="15dp"
                     android:textStyle="bold" />

                 <TextView
                     android:id="@+id/txtrecom"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textColor="#000000"
                     android:textSize="15dp"
                     android:text="nfhf"
                     />
                 <ImageButton
                     android:id="@+id/btncart"
                     android:layout_width="match_parent"
                     android:layout_height="50dp"
                     android:src="@drawable/cart"
                     android:scaleType="centerInside"
                     android:backgroundTint="#E2D987"
                     android:visibility="gone"
                     android:layout_weight="1"/>
                 <ImageButton
                     android:id="@+id/btnorder"
                     android:layout_width="match_parent"
                     android:layout_height="50dp"
                     android:src="@drawable/tracking"
                     android:visibility="gone"
                     android:scaleType="centerInside"
                     android:backgroundTint="#74ADDB"
                     android:layout_weight="1"/>
                 <ImageButton
                     android:id="@+id/btncancelorder"
                     android:layout_width="match_parent"
                     android:layout_height="50dp"
                     android:src="@drawable/deliverycancelled"
                     android:scaleType="centerInside"
                     android:visibility="gone"
                     android:backgroundTint="#F194B4"
                     android:layout_weight="1"/>
                 <ImageButton
                     android:id="@+id/btnremovecart"
                     android:layout_width="match_parent"
                     android:layout_height="50dp"
                     android:src="@drawable/deletecart"
                     android:scaleType="centerInside"
                     android:visibility="gone"
                     android:backgroundTint="#E2D987"
                     android:layout_weight="1"/>
                 <ImageButton
                     android:id="@+id/dprdt"
                     android:layout_width="match_parent"
                     android:layout_height="50dp"
                     android:src="@drawable/dprdt"
                     android:scaleType="centerInside"
                     android:backgroundTint="#E2D987"
                     android:visibility="gone"
                     android:layout_weight="1"/>
             </LinearLayout>

         </ScrollView>
     </androidx.cardview.widget.CardView>
    </LinearLayout>
