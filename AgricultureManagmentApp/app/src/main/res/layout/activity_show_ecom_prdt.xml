<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".show_ecom_prdt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgprdt"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/txtpname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$2000"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/curvebackground"
            android:hint="@string/qty2"
            app:hintEnabled="true"
            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtqty2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="@font/allerta"
                android:inputType="numberDecimal"
                android:shadowColor="@color/black"
                android:visibility="gone"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Specification"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtspec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fruits"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Product_Description"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtdec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fruits"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Recommandation"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtrecom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fruits"
            android:textColor="#000000"
            android:textSize="20dp" />
        <ImageButton
            android:id="@+id/btncart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/cart"
            android:scaleType="centerInside"
            android:backgroundTint="#E2D987"
            android:visibility="gone"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/btnorder"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/tracking"
            android:visibility="gone"
            android:scaleType="centerInside"
            android:backgroundTint="#74ADDB"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/btncancelorder"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/deliverycancelled"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:backgroundTint="#F194B4"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/btnremovecart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/deletecart"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:backgroundTint="#E2D987"
            android:layout_weight="1"/>
    </LinearLayout>
</ScrollView>