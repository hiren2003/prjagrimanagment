<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".show_ecom_prdt">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_margin="10dp"
            android:paddingLeft="5dp"
            android:layout_height="40dp"
            android:src="@drawable/down" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/quicksandbold"
            android:text="@string/My_Profile"
            android:textColor="@color/black"

            android:textSize="25dp"
            android:textStyle="bold" />


    </LinearLayout>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="710dp"
    android:background="@color/white">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_margin="10dp"
                 android:orientation="vertical">

                 <androidx.cardview.widget.CardView
                     android:layout_width="match_parent"
                     android:layout_height="300dp"
                     android:backgroundTint="#FFFFFF"
                     android:layout_margin="20dp"
                     app:cardCornerRadius="40dp">

                     <ImageView
                         android:id="@+id/imgprdt"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:layout_margin="10dp"
                         android:scaleType="fitCenter" />
                 </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">
                    <TextView
                     android:id="@+id/txtpname"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:fontFamily="@font/quicksandregular"
                     android:text="Product Name"
                     android:textColor="#000000"
                     android:textStyle="bold" android:layout_weight="1"
                     android:textSize="35dp" />

            <TextView
                android:id="@+id/txtprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandregular"
                android:text="Product Name"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>
                 <androidx.cardview.widget.CardView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="10dp"
                     app:cardElevation="8dp"
                     android:visibility="gone"
                     android:backgroundTint="#dadada"
                     app:cardCornerRadius="20dp">
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:padding="10dp"
                         android:orientation="vertical">
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="@string/Product_Name"
                             android:fontFamily="@font/quicksandbold"
                             android:textColor="#000000"
                             android:textSize="15dp"
                             android:textStyle="bold" />



                         <TextView
                             android:id="@+id/ttt"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="@string/Price2"
                             android:fontFamily="@font/quicksandbold"
                             android:textColor="#000000"
                             android:textStyle="bold"
                             android:textSize="15dp"
                             />

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="@string/Product_Id"
                             android:fontFamily="@font/quicksandbold"
                             android:textColor="#000000"
                             android:textStyle="bold"
                             android:textSize="15dp"
                             />
                         <TextView
                             android:id="@+id/txtkey"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Product Name"
                             android:textColor="#000000"
                             android:fontFamily="@font/quicksandregular"
                             android:textSize="15dp"/>
                     </LinearLayout>

                 </androidx.cardview.widget.CardView>


                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="start"
                     android:layout_marginLeft="25dp"
                     android:gravity="start"
                     android:layout_marginTop="10dp"
                     android:orientation="horizontal">

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:fontFamily="@font/quicksandbold"
                         android:text="CGST :"
                         android:textColor="#000000"
                         android:textSize="20dp"
                         android:textStyle="bold" />

                     <TextView
                         android:id="@+id/txtcgst"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:fontFamily="@font/quicksandregular"
                         android:text="28"
                         android:layout_marginLeft="20dp"
                         android:textColor="#000000"
                         android:textSize="20dp" />
                 </LinearLayout>
                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="start"
                     android:layout_marginLeft="25dp"

                     android:orientation="horizontal">
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="SGST :"
                         android:fontFamily="@font/quicksandbold"
                         android:textColor="#000000"
                         android:textStyle="bold"
                         android:textSize="20dp"/>
                     <TextView
                         android:id="@+id/txtsgst"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="28"
                         android:layout_marginLeft="20dp"
                         android:textColor="#000000"
                         android:fontFamily="@font/quicksandregular"
                         android:textSize="20dp"/>
                 </LinearLayout>
                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:gravity="start"
                     android:layout_gravity="start"
                     android:layout_marginLeft="25dp"
                     android:orientation="horizontal">
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/Discount"
                         android:fontFamily="@font/quicksandbold"
                         android:textColor="#000000"
                         android:textStyle="bold"
                         android:textSize="20dp"/>
                     <TextView
                         android:id="@+id/txtdiscount"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="28"
                         android:layout_marginLeft="10dp"
                         android:textColor="#000000"
                         android:fontFamily="@font/quicksandregular"
                         android:textSize="20dp"/>
                 </LinearLayout>
                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:gravity="start"
                     android:layout_gravity="start"
                     android:layout_marginTop="15dp"
                     android:layout_marginLeft="25dp"
                     android:orientation="vertical">
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:fontFamily="@font/quicksandbold"
                     android:text="@string/Specification"
                     android:textColor="#000000"

                     android:textSize="20dp"
                     android:textStyle="bold" />
                 <TextView
                     android:id="@+id/txtspec"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Fruits"
                     android:fontFamily="@font/quicksandregular"
                   android:layout_marginTop="10dp"
                     android:textColor="#000000"
                     android:textSize="15dp" />
             </LinearLayout>

                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:gravity="start"
                     android:layout_gravity="start"
                     android:layout_marginLeft="25dp"
                     android:layout_marginTop="15dp"
                     android:orientation="vertical">
                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="@string/Product_Description"
                         android:fontFamily="@font/quicksandbold"
                         android:textColor="#000000"
                         android:textSize="20dp"
                         android:textStyle="bold" />

                     <TextView
                         android:id="@+id/txtdec"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Fruits"
                         android:layout_marginTop="10dp"
                         android:fontFamily="@font/quicksandregular"
                         android:textColor="#000000"
                         android:textSize="15dp" />
                 </LinearLayout>
                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:gravity="start"
                     android:layout_gravity="start"
                     android:layout_marginTop="15dp"
                     android:layout_marginLeft="25dp"
                     android:orientation="vertical">
                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="@string/Recommandation"
                         android:textColor="#000000"
                         android:fontFamily="@font/quicksandbold"

                         android:textSize="20dp"
                         android:textStyle="bold" />

                     <TextView
                         android:id="@+id/txtrecom"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:textColor="#000000"
                         android:fontFamily="@font/quicksandregular"
                         android:textSize="15dp"
                         android:layout_marginTop="10dp"
                         android:text="nfhf"
                         />
                 </LinearLayout>
                 <com.google.android.material.textfield.TextInputLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     style="@style/choose_category"
                     app:boxBackgroundColor="#D5D5D5"
                     app:boxCornerRadiusBottomEnd="10sp"
                     app:boxCornerRadiusBottomStart="10dp"
                     app:boxCornerRadiusTopEnd="10dp"
                     app:boxCornerRadiusTopStart="10dp"
                     android:background="@drawable/curvebackground"
                     android:hint="@string/qty2"
                     android:visibility="gone"
                     android:id="@+id/txtqty2"
                     app:hintEnabled="true"
                     app:hintTextColor="@color/black">

                     <com.google.android.material.textfield.TextInputEditText
                         android:id="@+id/edtqty2"
                         android:layout_width="match_parent"
                         android:layout_height="60dp"
                         android:fontFamily="@font/allerta"
                         android:inputType="numberDecimal"
                         android:shadowColor="@color/black"
                         android:visibility="gone"
                         android:text="1"
                         android:textColor="@color/black" />
                 </com.google.android.material.textfield.TextInputLayout>


                 <ImageButton
                     android:id="@+id/btnorder"
                     android:layout_width="match_parent"
                     android:layout_height="50dp"
                     android:src="@drawable/tracking"
                     android:visibility="gone"
                     android:scaleType="centerInside"
                     android:backgroundTint="#74ADDB"
                     android:layout_marginTop="10dp"
                     android:padding="3dp"
                     android:background="@drawable/curvebackground"
                     android:layout_weight="1"/>
                 <ImageButton
                     android:id="@+id/btncancelorder"
                     android:layout_width="match_parent"
                     android:layout_height="50dp"
                     android:src="@drawable/deliverycancelled"
                     android:scaleType="centerInside"
                     android:layout_marginTop="10dp"
                     android:padding="3dp"
                     android:background="@drawable/curvebackground"
                     android:visibility="gone"
                     android:backgroundTint="#F194B4"
                     android:layout_weight="1"/>
                 <ImageButton
                     android:id="@+id/btnremovecart"
                     android:layout_width="match_parent"
                     android:layout_height="50dp"
                     android:src="@drawable/deletecart"
                     android:scaleType="centerInside"
                     android:visibility="gone"
                     android:layout_marginTop="10dp"
                     android:padding="3dp"
                     android:background="@drawable/curvebackground"
                     android:backgroundTint="#E2D987"
                     android:layout_weight="1"/>
                 <ImageButton
                     android:id="@+id/dprdt"
                     android:layout_width="match_parent"
                     android:layout_height="50dp"
                     android:src="@drawable/dprdt"
                     android:scaleType="centerInside"
                     android:layout_marginTop="10dp"
                     android:padding="3dp"
                     android:background="@drawable/curvebackground"
                     android:backgroundTint="#E2D987"
                     android:visibility="gone"
                     android:layout_weight="1"/>
             </LinearLayout>
</androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C8C4C4"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btncart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/cart"
            android:scaleType="fitCenter"
            android:backgroundTint="#E2D987"
            android:layout_marginTop="10dp"
            android:padding="3dp"
            android:background="@drawable/curvebackground"
            android:layout_weight="1"/>



    </LinearLayout>

</LinearLayout>