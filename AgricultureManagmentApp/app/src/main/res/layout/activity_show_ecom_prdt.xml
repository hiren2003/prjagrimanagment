<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".show_ecom_prdt">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_margin="10dp"
            android:paddingLeft="5dp"
            android:layout_height="40dp"
            android:src="@drawable/down" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/quicksandbold"
            android:text="@string/Details"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:backgroundTint="#E1F0DA"
                android:layout_margin="20dp"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:id="@+id/imgprdt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:scaleType="fitCenter" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtpname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandregular"
                    android:text="Product Name"
                    android:textColor="#000000"
                    android:textStyle="bold" android:layout_weight="1"
                    android:textSize="35dp" />

                <TextView
                    android:id="@+id/txtprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandregular"
                    android:text="Product Name"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardElevation="8dp"
                android:visibility="gone"
                android:backgroundTint="#dadada"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Product_Name"
                        android:fontFamily="@font/quicksandbold"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:textStyle="bold" />



                    <TextView
                        android:id="@+id/ttt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Price2"
                        android:fontFamily="@font/quicksandbold"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Product_Id"
                        android:fontFamily="@font/quicksandbold"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        />
                    <TextView
                        android:id="@+id/txtkey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Name"
                        android:textColor="#000000"
                        android:fontFamily="@font/quicksandregular"
                        android:textSize="15dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="25dp"
                android:gravity="start"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandbold"
                    android:text="CGST :"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtcgst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandregular"
                    android:text="28"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SGST :"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/txtsgst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/quicksandregular"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_gravity="start"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Discount"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/txtdiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/quicksandregular"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_gravity="start"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandbold"
                    android:text="@string/Specification"
                    android:textColor="#000000"

                    android:textSize="20dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txtspec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fruits"
                    android:fontFamily="@font/quicksandregular"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_gravity="start"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Product_Description"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtdec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fruits"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/quicksandregular"
                    android:textColor="#000000"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_gravity="start"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Recommandation"
                    android:textColor="#000000"
                    android:fontFamily="@font/quicksandbold"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtrecom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:fontFamily="@font/quicksandregular"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:text="nfhf"
                    />
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/choose_category"
                app:boxBackgroundColor="#D5D5D5"
                app:boxCornerRadiusBottomEnd="10sp"
                android:layout_margin="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                android:visibility="gone"
                android:background="@drawable/curvebackground"
                android:hint="@string/qty2"
                android:id="@+id/txtqty2"
                app:hintEnabled="true"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtqty2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:fontFamily="@font/allerta"
                    android:inputType="numberDecimal"
                    android:shadowColor="@color/black"
                    android:visibility="gone"
                    android:text="1"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>


            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/tracking"
                android:visibility="gone"
                android:scaleType="centerInside"
                android:backgroundTint="#74ADDB"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:background="@drawable/curvebackground"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/btncancelorder"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/deliverycancelled"
                android:scaleType="centerInside"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:background="@drawable/curvebackground"
                android:visibility="gone"
                android:backgroundTint="#F194B4"
                android:layout_weight="1"/>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/deletecart"
                android:scaleType="centerInside"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:background="@drawable/curvebackground"
                android:backgroundTint="#E2D987"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/dprdt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/dprdt"
                android:scaleType="centerInside"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:background="@drawable/curvebackground"
                android:backgroundTint="#E2D987"
                android:visibility="gone"
                android:layout_weight="1"/>
            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@drawable/addc"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btncart"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:minHeight="80dp"
                        android:text="Add To Cart"
                        android:fontFamily="@font/quicksandregular"
                        android:backgroundTint="#088118"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/addcart"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textSize="20dp"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/gocart"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:text="Go To Cart"
                        android:minHeight="80dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/quicksandregular"
                        android:backgroundTint="#FFFFFF"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/addcart"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:textColor="#0F6808"
                        android:textSize="20dp"/>
                </LinearLayout>

                <!--        </androidx.cardview.widget.CardView>-->

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:background="@drawable/addc"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <!--        <androidx.cardview.widget.CardView-->
                <!--            android:layout_width="match_parent"-->
                <!--            android:layout_height="match_parent"-->
                <!--            android:elevation="10dp"-->
                <!--            android:layout_margin="7dp"-->
                <!--            app:cardCornerRadius="20dp">-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnorder"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:text="place order"
                        android:minHeight="80dp"
                        android:fontFamily="@font/quicksandregular"
                        android:backgroundTint="#088118"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/addcart"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textSize="20dp"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnremovecart"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:text="Remove cart"
                        android:minHeight="80dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/quicksandregular"
                        android:backgroundTint="#CF1010"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/addcart"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"/>
                </LinearLayout>


                <!--        </androidx.cardview.widget.CardView>-->


            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>