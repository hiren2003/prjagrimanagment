<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <RelativeLayout
      android:id="@+id/rvleft"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <ImageView
          android:id="@+id/imgprofpc"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:src="@drawable/kissanfriends"
          android:layout_alignParentStart="true"
          />
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:backgroundTint="#ffffff"
          android:background="@drawable/oneflat"
          android:layout_marginStart="25dp"
          android:padding="5dp"
          android:layout_marginEnd="20dp"
          android:orientation="vertical">
          <ImageView
              android:id="@+id/imgbitmap"
              android:scaleType="centerInside"
              android:layout_width="380dp"
              android:layout_height="350dp"
              android:visibility="gone"
              android:layout_gravity="center_horizontal"
              android:fitsSystemWindows="true"/>
          <TextView
              android:id="@+id/txtquery"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="16dp"
              android:textColor="#000"
              />
          <TextView
              android:id="@+id/txttime"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="10dp"
              android:textColor="#000"
              android:visibility="gone"
              />
          <TextView
              android:id="@+id/txtdate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="10dp"
              android:textColor="#000"
              android:visibility="gone"

              />
      </LinearLayout>
  </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rvright"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgprofpc2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/kissanfriends"
            android:layout_alignParentEnd="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#dcf8c6"
            android:background="@drawable/oneflat2"
            android:layout_marginEnd="25dp"
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgbitmap2"
                android:scaleType="centerInside"
                android:layout_width="380dp"
                android:layout_height="350dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:fitsSystemWindows="true"/>
            <TextView
                android:id="@+id/txtquery2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#000"
                />

                <TextView
                    android:id="@+id/txttime2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="#000"
                    android:visibility="gone"
                    />
            <TextView
                android:id="@+id/txtdate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="#000"
                android:visibility="gone"
                />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>