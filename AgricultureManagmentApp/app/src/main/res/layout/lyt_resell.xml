<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cdlyt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgprdt"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/labour" />

        <TextView
            android:id="@+id/txtpname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/quicksandsemibold"
            android:text="SugarCane"
            android:textColor="#000000"
            android:textFontWeight="900"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtqty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/quicksandmedium"
            android:text="Quntity : 250 kg"
            android:textColor="#000000"
            android:textFontWeight="900"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtprc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/quicksandmedium"
            android:text="Price : 100"
            android:textColor="#000000"
            android:textFontWeight="900"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.cardview.widget.CardView>