<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="20dp"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#f4f4f4"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
        <ImageView
            android:id="@+id/profilepc"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/baseline_account_circle_24"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="43dp"
            >

            <TextView
                android:id="@+id/txtuname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mavenpro"
                android:text="John Thomsan"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/10/2023"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/btnmore"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:src="@drawable/baseline_more_horiz_24" />
        <ImageView
            android:id="@+id/btndelete"
            android:layout_width="30dp"
            android:visibility="gone"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:src="@drawable/delete" />
    </RelativeLayout>
</LinearLayout>

    <TextView
        android:id="@+id/txtdes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta"
        android:layout_marginStart="10dp"
        android:text="My First Post"
        android:textColor="#121212"
        android:visibility="gone"
        android:layout_margin="7dp"
        android:textSize="15dp" />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <VideoView
            android:id="@+id/videoview"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
           />
    </FrameLayout>
    <ImageView
        android:id="@+id/imgfeed"
        android:scaleType="centerInside"
        android:layout_width="380dp"
        android:layout_height="350dp"
        android:fitsSystemWindows="true"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="start"
        android:gravity="center_horizontal">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center_horizontal"
           android:orientation="vertical">
           <RelativeLayout
               android:id="@+id/rllike"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/like"
                   android:scaleType="centerInside"
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:fitsSystemWindows="true"
                   android:src="@drawable/notliked"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:layout_marginTop="10dp"
                   />
           </RelativeLayout>
           <TextView
               android:id="@+id/likecount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="10dp"
               android:text="1000"/>
       </LinearLayout>
        <ImageView
            android:id="@+id/comment"
            android:scaleType="centerInside"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:fitsSystemWindows="true"
            android:src="@drawable/comment"
            android:layout_margin="10dp"
            />
        <ImageView
            android:id="@+id/share"
            android:scaleType="centerInside"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:fitsSystemWindows="true"
            android:src="@drawable/share2"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:background="#525151"
        android:alpha="0.7"
        android:layout_height="1dp"/>
</LinearLayout>

</androidx.cardview.widget.CardView>