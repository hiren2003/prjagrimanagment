<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:minHeight="180dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="15dp"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/profilepc"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_account_circle_24"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                >
                <TextView
                    android:id="@+id/txtuname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Thomsan"
                    android:textSize="15dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/txtdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="12/10/2023"
                    />
            </LinearLayout>

        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:background="@color/frame"
            android:layout_below="@+id/hh"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="2dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/suitcase"/>
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="10dp"
       android:orientation="vertical">
       <TextView
           android:id="@+id/worktype"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Farming"
           android:textStyle="bold"
           android:textColor="#000"
           android:fontFamily="@font/montserrat"
           android:textSize="15dp" />
       <TextView
           android:id="@+id/txtwtype"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Partenership"
           android:textColor="#000"
           android:fontFamily="@font/montserrat_medium"
           android:textSize="15dp" />
   </LinearLayout>
        </LinearLayout>
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="5dp"
         android:orientation="horizontal">
         <ImageView
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:src="@drawable/clock"/>
         <TextView
             android:id="@+id/txtduration"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="12 Months"
             android:textStyle="bold"
             android:textColor="#000"
             android:fontFamily="@font/montserrat_medium"
             android:layout_marginStart="10dp"
             android:textSize="15dp" />
     </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/salary"/>

            <TextView
                android:id="@+id/txtWages"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="$ 2000"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/place"/>
            <TextView
                android:id="@+id/txtvlg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Village : Simada gam"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/description"/>

            <TextView
                android:id="@+id/txtdes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="110dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="hello i am hiren i am farmer looking for greate people"
                android:layout_alignParentBottom="true"
                android:textSize="15dp" />
        </LinearLayout>



    </LinearLayout>
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgwhatsapp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/whatsapp"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:layout_alignParentEnd="true"
            />

        <ImageView
            android:id="@+id/imgcall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:src="@drawable/phone"
            />
        <ImageView
            android:id="@+id/imgdlt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:src="@drawable/delete"
            />

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>
    </androidx.cardview.widget.CardView>
