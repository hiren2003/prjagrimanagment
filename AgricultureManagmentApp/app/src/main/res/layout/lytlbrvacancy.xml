<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:minHeight="180dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="30dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/profilepc"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_account_circle_24"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                >
                <TextView
                    android:id="@+id/txtuname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Thomsan"
                    android:textSize="15dp"
                    android:fontFamily="@font/alegreya_sc_bold"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/txtdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/10/2023"
                    />
            </LinearLayout>

        </LinearLayout>
<FrameLayout
    android:layout_width="0dp"
    android:layout_height="20dp"/>
        <TextView
            android:id="@+id/txtoname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Thomsan"
            android:textStyle="bold"
            android:textColor="#000"
            android:fontFamily="@font/allerta"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/txtwtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wage Type : Partenership"
            android:textStyle="bold"
            android:textColor="#000"
            android:fontFamily="@font/allerta"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/txtduration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration : 12 Months"
            android:textStyle="bold"
            android:textColor="#000"
            android:fontFamily="@font/allerta"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/txtWages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="$ 2000"
            android:textColor="#000"
            android:textStyle="bold"
            android:fontFamily="@font/allerta"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/worktype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type Of Work : Farming"
            android:textStyle="bold"
            android:textColor="#000"
            android:fontFamily="@font/allerta"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/txtvlg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Village : Simada gam"
            android:textStyle="bold"
            android:textColor="#000"
            android:fontFamily="@font/allerta"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txttehsil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tehsil : Varachha"
            android:textStyle="bold"
            android:textColor="#000"
            android:fontFamily="@font/allerta"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtdis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="District : Surat"
            android:textStyle="bold"
            android:textColor="#000"
            android:fontFamily="@font/allerta"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#000"
            android:fontFamily="@font/allerta"
            android:text="State : Gujrat"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/txtdes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginEnd="110dp"
            android:fontFamily="@font/allerta"
            android:text="hello i am hiren i am farmer looking for greate people"
            android:layout_alignParentBottom="true"
            android:textSize="15dp" />

    </LinearLayout>
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgwhatsapp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/instagram"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            />

        <ImageView
            android:id="@+id/imgcall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:src="@drawable/baseline_call_24"
            />
        <ImageView
            android:id="@+id/imgdlt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:src="@drawable/baseline_delete_24"
            />

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>