<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/srcview"
    android:background="#00000000"
    tools:context=".show_CultivationProduct">
    <FrameLayout
        android:id="@+id/btncancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/close" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:padding="10dp"
        android:background="@drawable/layfeedback"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgprdt"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="10dp"
                    android:scaleType="fitCenter"
                    />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:background="#525151"
                    android:layout_margin="10dp"
                    android:layout_height="2dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtpname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial"
                        android:text="Sugar Cane"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="@string/Price2"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/lightt"
                            android:textSize="15dp"
                            />

                        <TextView
                            android:id="@+id/txtprc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Fruits"
                            android:fontFamily="@font/federo"
                            android:layout_marginTop="5dp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="15dp" />


                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="2dp"
                        android:layout_gravity="center"
                        android:background="@color/frame"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="50dp"/>
                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="@string/qty"
                            android:textColor="@color/lightt"
                            android:textSize="15dp"
                            android:layout_gravity="center_horizontal"
                            />

                        <TextView
                            android:id="@+id/txtqty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="98249 45785"
                            android:fontFamily="@font/federo"
                            android:layout_marginTop="5dp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="15dp" />


                    </LinearLayout>
                    <FrameLayout
                        android:layout_width="2dp"
                        android:layout_gravity="center"
                        android:background="@color/frame"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="50dp"/>
                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="@string/payment"
                            android:textColor="@color/lightt"
                            android:textSize="15dp"
                            android:layout_gravity="center_horizontal"
                            />

                        <TextView
                            android:id="@+id/txttpay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="98249 45785"
                            android:fontFamily="@font/federo"
                            android:layout_marginTop="5dp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="15dp" />


                    </LinearLayout>

                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:background="@color/frame"
                    android:layout_below="@+id/hh"
                    android:layout_margin="12dp"
                    android:layout_height="2dp"/>
                <LinearLayout
                    android:layout_width="370dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Specification"
                            android:textSize="15dp"
                            android:textColor="@color/lightt"
                            />
                        <TextView
                            android:id="@+id/txtspeci"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="200 Kilogram"
                            android:layout_marginTop="5dp"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            />
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:background="@color/frame"
                    android:layout_below="@+id/hh"
                    android:layout_margin="12dp"
                    android:layout_height="2dp"/>
                <LinearLayout
                    android:layout_width="370dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Description"
                            android:textSize="15dp"
                            android:textColor="@color/lightt"
                            />
                        <TextView
                            android:id="@+id/txtdesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="200 Kilogram"
                            android:layout_marginTop="5dp"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            />
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:background="@color/frame"
                    android:layout_below="@+id/hh"
                    android:layout_margin="12dp"
                    android:layout_height="2dp"/>
                <LinearLayout
                    android:layout_width="370dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Recommandation"
                            android:textSize="15dp"
                            android:textColor="@color/lightt"
                            />
                        <TextView
                            android:id="@+id/txtrecomm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="200 Kilogram"
                            android:layout_marginTop="5dp"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            />
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:background="@color/frame"
                    android:layout_below="@+id/hh"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_height="2dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/phone"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mobile_no"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/lightt"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtmo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Village : Simada gam"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="30dp"
                        android:textSize="15dp" />
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:background="@color/frame"
                    android:layout_below="@+id/hh"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="2dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/place"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/lightt"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtadd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Village : Simada gam"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="30dp"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</RelativeLayout>